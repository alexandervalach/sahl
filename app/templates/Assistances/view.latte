{block content}

<section class="content">
    {if $user->loggedIn}
      <div class="clearfix">
        <div class="pull-right">
          <button type="button" class='btn btn-large btn-primary' data-toggle="modal" data-target="#add-goal" title="Pridať góly hráčom">
            <span class="glyphicon glyphicon-plus"></span> Pridať
          </button>
        </div>
      </div>
    {/if}
  <div class="cleafix">
    <h1 n:block="title">Asistencie gólov</h1>
  </div>
</section>

<div n:if="$assistances->count()" class="table-responsive text-center">
  <table class="table text-center">
    <caption>
      <h2>{$team1->name} : {$team2->name}</h2>
    </caption>
    <thead>
      <tr>
        <th class="text-center">Hráč</th>
        <th class="text-center">Počet gólov</th>
        <th class="text-center">Domáci/Hostia</th>
        <th class="text-center" {* colspan="2" *}>Akcia</th>
      </tr>
    </thead>
    <tbody>
    <tr n:foreach="$assistances as $assistance">
      <td>{$assistance->player_name} ({$assistance->player_number})</td>
      <td>{$assistance->assistances}</td>
      <td>{if $assistance->is_home_player}DOMÁCI{else}HOSTIA{/if}</td>
        {if $user->loggedIn}
          {*
          <td>
            <a n:href="Goals:edit $goal->id" class="text-success">
              <span class="glyphicon glyphicon-pencil"></span>
            </a>
          </td>
           *}
          <td>
            <a n:href="Assistances:remove $assistance->id" class="text-danger">
              <span class="glyphicon glyphicon-trash"></span>
            </a>
          </td>
        {/if}
    </tr>
    </tbody>
  </table>
</div>

<div id="add-goal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title">Pridať asistencie hráčovi</h3>
      </div>
      <div class="modal-body">
          {control addForm}
      </div>
    </div>
  </div>
</div>

{/block}